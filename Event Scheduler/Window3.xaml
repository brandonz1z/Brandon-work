<Window x:Class="Event_Scheduler.Window3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Event_Scheduler"
        mc:Ignorable="d"
         Title="Selected Dates" Height="450" Width="800" Background="AntiqueWhite">
    <Grid>
        <DataGrid x:Name="Datagrid1" HorizontalAlignment="Left" Height="330" Margin="0,10,-0.4,0" VerticalAlignment="Top" Width="794">

            <DataGrid.Resources>

            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn Header =" Event Name" Binding="{Binding Eventname}" Width="150"/>
                <DataGridTextColumn Header =" Location" Binding="{Binding Location}"  Width="150"/>
                <DataGridTextColumn Header =" Months" Binding="{Binding Month}" Width="150"/>
                <DataGridTextColumn Header =" Year" Binding="{Binding Year}" Width="150"/>
                <DataGridTextColumn Header =" Event Details" Binding="{Binding EventDetail}" Width="150"/>



            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
